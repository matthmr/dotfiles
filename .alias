# overrides
alias ls='ls --color'
alias grep='grep --color'
alias lf='lf -single'
alias emacs='emacs -nw'
alias gdb='gdb --tui'
alias ed='ed -p ":"'
alias tmux='tmux -u'
alias dvtm='dvtm -m ^a -M zsh'
alias diff='diff --color -u'
alias x='xargs'
alias fd='fd | fzft'

# simplifiers
alias f="find"
alias g="git"
alias p="pacman"
alias cs='clear'

# alternatives ...
alias o="echo"
alias fzft='fzf-tmux'

# ... turning to overrides
alias mv="mv -i -v"
alias rm="rm -I -v"
alias cp="cp -i -v"
# alias bat="bat -pp -n"

# editor
alias fvim='vim $(fd)'
alias ffvim='vim $(fzf)'
alias v="vim"
alias e="vim"

# plugins
alias lc="exa -lh --icons --sort type"
