# overrides
alias ls='ls --color'
alias grep='grep --color'
alias lf='lf -single'
alias emacs='emacs -nw'
alias gdb='gdb --tui'
alias ggdb='/bin/gdb'
alias tmux='tmux -u'
alias dvtm='dvtm -m ^a -M zsh'
alias diff='diff --color -u'
alias patch='patch -u'
alias x='xargs'
alias fd='fd | fzft'
alias xonotic='xonotic -basedir /home/mh/Games/Xonotic'

# alternatives ...
alias fzft='fzf-tmux'
alias mk='make'
alias l='exa -l -g --icons --sort type'
alias localman='man -M ~/Drives/root/usr/share/man'

# ... turning to overrides
alias mv='mv -i -v'
alias rm='rm -I -v'
alias cp='cp -i -v'
alias ln='ln -i -v'

# editor
alias nv='nvim'
alias nvi='nvim'
alias vim='nvim'
alias gvim='/bin/vim'

# functions
alias xc='xclip -selection clipboard'
alias clean='echo "" > /home/mh/.zsh_history'
alias reload='source /home/mh/.alias'
alias nvmpv='mpv --no-video'
alias lang='bat -l'
alias wiki='nvim /home/mh/Wiki/index.md'
alias journal='nvim /home/mh/Wiki/Journal/index.md'
alias gget='doas cat ~mh/.github | xc'
alias gitfetch='onefetch'

# function definition
function unitf {
	echo -- UNIT $2 --
	echo -------------
	$1 $2 2>&1
	echo -------------
	cat $2
	echo -------------
}

function unix2date {
	unix=$1
	date -d @${unix}
}
